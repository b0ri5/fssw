import checks
import os

Import('*')

env.AppendUnique(CPPPATH = ['#include'] )

# get a list of source files
srcs = set()

for f in env.Glob('*.cc'):
	path, file = os.path.split(str(f) )
	srcs.add(file)

# compile them into object files
objs = env.Object(list(srcs) )

libfssw_name = 'fssw%s' % (libsuffix)
lib = env.StaticLibrary('#/lib/%s' % (libfssw_name), [objs] )
env.Alias('lib' + libfssw_name, lib)